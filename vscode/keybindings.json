[
  // Navigation
  {
    "key": "ctrl-h",
    "command": "workbench.action.navigateLeft"
  },
  {
    "key": "ctrl-l",
    "command": "workbench.action.navigateRight"
  },
  {
    "key": "ctrl-k",
    "command": "workbench.action.navigateUp"
  },
  {
    "key": "ctrl-j",
    "command": "workbench.action.navigateDown"
  },
  {
    "key": "space ,",
    "command": "workbench.action.showAllEditors",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus) && !terminalFocus"
  },
  {
    "key": "space e",
    "command": "runCommands",
    "args": {
      "commands": [
        "workbench.action.toggleSidebarVisibility",
        "workbench.files.action.focusFilesExplorer"
      ]
    },
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus) && !sideBarFocus && !terminalFocus"
  },
  {
    "key": "space e",
    "command": "runCommands",
    "args": {
      "commands": [
        "workbench.action.toggleSidebarVisibility",
        "workbench.action.focusActiveEditorGroup"
      ]
    },
    "when": "sideBarFocus && !inputFocus && !terminalFocus"
  },
  {
    "key": "space e",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "vim.mode == 'Normal' && editorTextFocus && foldersViewVisible"
  },
  {
    "key": "tab",
    "command": "workbench.action.nextEditorInGroup",
    "when": "(vim.mode == 'Normal' || vim.mode == 'Visual') && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "shift-tab",
    "command": "workbench.action.previousEditorInGroup",
    "when": "(vim.mode == 'Normal' || vim.mode == 'Visual') && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "space g d",
    "command": "gitlens.diffWithPrevious",
    "when": "vim.mode == 'Normal' && editorTextFocus && gitOpenRepositoryCount > 0 && !inQuickOpen"
  },
  {
    "key": "space g h",
    "command": "gitlens.showQuickFileHistory",
    "when": "vim.mode == 'Normal' && editorTextFocus && gitOpenRepositoryCount > 0"
  },
  {
    "key": "space g t",
    "command": "gitlens.showRepositoriesView",
    "when": "vim.mode == 'Normal' && gitOpenRepositoryCount > 0"
  },
  {
    "key": "space g b",
    "command": "gitlens.showBranchesView",
    "when": "vim.mode == 'Normal' && gitOpenRepositoryCount > 0"
  },
  // Coding
  {
    "key": "shift-j",
    "command": "editor.action.moveLinesDownAction",
    "when": "vim.mode == 'VisualLine' && editorTextFocus"
  },
  {
    "key": "shift-k",
    "command": "editor.action.moveLinesUpAction",
    "when": "vim.mode == 'VisualLine' && editorTextFocus"
  },
  {
    "key": "shift-k",
    "command": "editor.action.showHover",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  // Refactoring
  {
    "key": "space r n",
    "command": "editor.action.rename",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space r m",
    "command": "editor.action.codeAction",
    "args": {
      "kind": "refactor.extract.method"
    },
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space r v",
    "command": "editor.action.codeAction",
    "args": {
      "kind": "refactor.extract.variable"
    },
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space r f",
    "command": "editor.action.codeAction",
    "args": {
      "kind": "refactor.extract.constant"
    },
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space r s",
    "command": "editor.action.showHover",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space r r",
    "command": "editor.action.refactor",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space s a",
    "command": "editor.action.codeAction",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space s f",
    "command": "editor.action.formatDocument",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space c",
    "command": "workbench.action.closeActiveEditor",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space space",
    "command": "workbench.action.quickOpen",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "space s m",
    "command": "workbench.action.gotoSymbol",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space s d",
    "command": "editor.action.revealDefinition",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space s u",
    "command": "editor.action.goToReferences",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "gd",
    "command": "editor.action.revealDefinition",
    "when": "editorTextFocus && vim.mode == 'Normal'"
  },
  {
    "key": "gD",
    "command": "editor.action.revealDeclaration",
    "when": "editorTextFocus && vim.mode == 'Normal'"
  },
  {
    "key": "gr",
    "command": "editor.action.goToReferences",
    "when": "editorTextFocus && vim.mode == 'Normal'"
  },
  {
    "key": "gi",
    "command": "editor.action.goToImplementation",
    "when": "editorTextFocus && vim.mode == 'Normal'"
  },
  {
    "key": "gm",
    "command": "workbench.action.gotoSymbol",
    "when": "editorTextFocus && vim.mode == 'Normal'"
  },
  {
    "key": "space f f",
    "command": "workbench.action.findInFiles",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "space g g",
    "command": "runCommands",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)",
    "args": {
      "commands": [
        "workbench.view.scm",
        "workbench.scm.focus"
      ]
    }
  },
  {
    "key": "space n",
    "command": "workbench.action.files.newUntitledFile",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "ctrl-n",
    "command": "editor.action.addSelectionToNextFindMatch",
    "when": "(vim.mode == 'Normal' || vim.mode == 'Visual') && (editorTextFocus || !inputFocus)"
  },
  // File Explorer
  {
    "key": "r",
    "command": "renameFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "c",
    "command": "filesExplorer.copy",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "p",
    "command": "filesExplorer.paste",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "x",
    "command": "filesExplorer.cut",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "d",
    "command": "deleteFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "a",
    "command": "explorer.newFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "shift-a",
    "command": "explorer.newFolder",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "s",
    "command": "explorer.openToSide",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "shift-s",
    "command": "runCommands",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus",
    "args": {
      "commands": [
        "workbench.action.splitEditorDown",
        "explorer.openAndPassFocus",
        "workbench.action.closeOtherEditors"
      ]
    }
  },
  {
    "key": "ctrl+alt+g",
    "command": "workbench.action.terminal.sendSequence",
    "args": {
      "text": "wt -d ${fileDirname} lazygit\r"
    },
    "when": "filesExplorerFocus && foldersViewVisible && !inputFocus"
  },
  {
    "key": "enter",
    "command": "list.toggleExpand",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && explorerResourceIsFolder && !inputFocus"
  },
  {
    "key": "space t t",
    "command": "workbench.action.terminal.newWithCwd",
    "args": {
      "cwd": "${fileDirname}"
    },
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space w v",
    "command": "workbench.action.splitEditorRight",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space w s",
    "command": "workbench.action.splitEditorDown",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space w m",
    "command": "workbench.action.moveEditorToNextGroup",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space w u",
    "command": "workbench.action.closeActiveEditor",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space",
    "command": "-",
    "when": "vim.mode == 'Insert' && !terminalFocus"
  },
  {
    "key": "ctrl+w",
    "command": "workbench.action.terminal.kill",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+shift+p",
    "command": "workbench.action.showCommands"
  },
  {
    "key": "space shift+7",
    "command": "editor.action.commentLine",
    "when": "editorTextFocus && vim.mode == 'Normal'"
  },
  {
    "key": "space shift+7",
    "command": "editor.action.commentLine",
    "when": "editorTextFocus && vim.mode == 'Visual'"
  },
  {
    "key": "space shift+7",
    "command": "editor.action.commentLine",
    "when": "editorTextFocus && vim.mode == 'VisualLine'"
  }

]

